{
  "ts-node": {
      "require": ["tsconfig-paths/register"]
  },
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["ESNext", "es2021", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["./common/*"]
    }
  },
}
